{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2019",
    "lib": ["ESNext", "ESNext.AsyncIterable", "ESNext.Array"],
    "module": "esnext",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./package.nls.*.json",
    "./node_modules/vscode/vscode.d.ts",
    "./node_modules/vscode/lib/*"
  ]
}
